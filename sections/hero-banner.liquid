<div class="hero-banner">
  <img src="{{ section.settings.desktop_image | img_url: '1600x600' }}" alt="Hero Banner" class="hero-banner__desktop" />
  <img src="{{ section.settings.mobile_image | img_url: '800x400' }}" alt="Hero Banner" class="hero-banner__mobile" />
</div>

<style>
  .hero-banner {
    position: relative;
  }

  .hero-banner__desktop {
    display: block;
    width: 100%;
    height: auto;
  }

  .hero-banner__mobile {
    display: none;
    width: 100%;
    height: auto;
  }

  @media (max-width: 768px) {
    .hero-banner__desktop {
      display: none;
    }

    .hero-banner__mobile {
      display: block;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
